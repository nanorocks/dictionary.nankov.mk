        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-143052592-1');
    </script>
    <!-- Material Design for Bootstrap fonts and icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.min.css">
</head>
<body>
<section>
    <div class="container">
        <div class="row">
            <div class="offset-lg-1 col-lg-10 offset-md-1 col-lg-10 col-sm-12 col-12">
                <div class="card mt-lg-5 mt-md-5 pt-sm-4 pt-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col text-center">
                                <img src="/img/main-logo.png" alt="Main logo" class="img-fluid">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-center text-uppercase">
                                <span class="badge badge-light rounded-0">searched valid words <span class="badge-dark p-1" id="count-valid-word">0</span></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <form autocomplete="off">
                                    <div class="form-group">
                                        <label for="auto-complete-input" class="bmd-label-floating">Write your word</label>
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control" aria-label="Keyword" aria-describedby="basic-addon2" id="auto-complete-input">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="show-description-word" class="bmd-label-floating">Word description</label>
                                        <textarea class="form-control small" id="show-description-word" rows="8" disabled></textarea>
                                        <small class="text-muted">
                                            *The words are taken from several dictionaries, in order to obtain relevant words with description.
                                        </small>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-8 offset-lg-2 col-md-6 offset-md-3 col-sm-12 col-12">
                                            <div class="text-center">
                                                <button type="button" class="btn btn-outline-dark rounded-0 btn-block" id="get-description-btn">get description </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center pb-4">
                    <small class="small text-muted">Written and hosted by Andrej Nankov
                        (<a href="https://github.com/nanorocks">@nanorocks</a>). Copyright Â© 2019 English Dictionary.
                    </small>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/js/main.min.js"></script>
</body>
</html>